{
	"compilerOptions": {
		"esModuleInterop": true,
		"skipLibCheck": true,
		"target": "es2022",
		"lib": ["es2022"],
		"allowJs": true,
		"resolveJsonModule": true,
		"moduleDetection": "force",
		"isolatedModules": true,
		"verbatimModuleSyntax": true,

		"strict": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitOverride": true,

		"module": "Preserve",
		"rootDir": "src",
		"noEmit": true
	},

	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "**/*.test.ts"]
}
